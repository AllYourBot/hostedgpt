<%# locals: (assistant:, size:, classes: nil) -%>
<% classes = %|
    rounded-full
    w-#{size} h-#{size}
    #{size > 6 ? "text-sm" : "text-xs"}
    #{classes}
|%>
<% logo = if assistant.name.starts_with?("GPT-")
  "openai_logo.svg"
elsif assistant.name.starts_with?("Claude")
  "claude_logo.svg"
end
%>

<% if logo %>
  <picture class="<%= classes %> p-1 bg-white border border-gray-100">
    <%= image_tag logo %>
  </picture>
<% else %>
  <picture
    class="
          <%= classes %>
          bg-blue-200 text-black
          flex justify-center items-center
          "
  >
    <%= assistant.initials %>
  </picture>
<% end %>