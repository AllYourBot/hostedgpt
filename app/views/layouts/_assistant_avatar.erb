<%# locals: (assistant:, size:, classes: nil) -%>
<% classes = %|
    rounded-full
    w-#{size} h-#{size}
    #{size > 6 ? "text-sm" : "text-xs"}
    #{classes}
|%>
<% logo = if assistant.name.starts_with?("GPT-")
  "openai_logo.svg"
elsif assistant.name.starts_with?("Claude")
  "claude_logo.svg"
elsif assistant.name.starts_with?("Meta Llama")
  "meta_ai_logo.svg"
end
%>
<% if logo %>
  <picture class="<%= classes %> block bg-white border border-gray-100 overflow-hidden">
    <%= image_tag(logo, class: "w-full h-full") %>
  </picture>
<% else %>
  <picture
    class="
          <%= classes %>
          bg-blue-200 text-black
          flex justify-center items-center
          "
  >
    <%= assistant.initials %>
  </picture>
<% end %>
