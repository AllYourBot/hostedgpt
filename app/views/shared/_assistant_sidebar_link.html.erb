<%# locals: (assistant:, settings: true, selected: false, assistant_counter: -1) %>
<% first = assistant_counter == 0 %>
<div class="
            <%= first && 'sticky top-0 pt-3' %>
            flex justify-between items-center
            mb-1 p-1 pr-2
            bg-black hover:bg-zinc-400 hover:bg-opacity-25 
            group cursor-pointer 
            text-sm rounded-lg 
">
  <%= link_to assistant, class: "ml-2 flex-1 flex items-center text-white truncate" do %>
    <div id="profile" class="mr-2 w-7 h-7 bg-white rounded-full"></div>
     <%= assistant.name %>
  <% end %>


  <div class="<%= selected ? 'flex' : 'hidden' %> group-hover:flex gap-3 pl-2">
    <% if settings %>
      <div class="dropdown inline-flex dropdown-end outline-none">
        <%= icon "ellipsis-horizontal",
              variant: :micro,
              size: 18,
              class: "outline-none inline text-gray-400 invisible group-hover:visible hover:text-white cursor-pointer",
              'data-controller': "nested-pointer",
              title: "More",
              tabindex: 0,
              role: :button
        %>

        <ul tabindex="0" class="dropdown-content z-10 menu p-2 shadow-xl bg-base-100 rounded-box w-52 -mr-10 mt-7 dark:!bg-zinc-800" data-controller="nested-pointer">
          <li><a><%= icon "cog-6-tooth", variant: :outline, size: 18 %>Settings</a></li>
          <li><a><%= icon "arrow-up-tray", variant: :outline, size: 18 %>Share</a></li>
        </ul>
      </div>
    <% end %>

    <%= link_to new_assistant_message_path(assistant) do %>
      <%= icon "pencil-square",
        variant: :micro,
        size: 18,
        class: "inline text-gray-400 cursor-pointer group-hover:visible hover:text-white #{selected ? 'text-white visible' : 'invisible'}",
        data: { selected: selected },
        'data-controller': "nested-pointer",
        title: "New"
      %>
    <% end %>
  </div>
</div>
