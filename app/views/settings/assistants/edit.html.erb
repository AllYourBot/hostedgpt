<div class="mx-auto md:w-2/3 w-full">
  <h1 class="text-3xl"><%= t('app.settings.assistants.edit_title') %></h1>

  <%= render "form", assistant: @assistant %>

  <%= button_to t('app.settings.assistants.delete'),
      settings_assistant_path(@assistant),
      method: :delete,
      data: { turbo_confirm: t('app.settings.assistants.confirm_delete') },
      form: { class: "inline-block" },
      class: %|
        ml-5 py-3 px-5
        bg-white dark:bg-gray-500
        border border-gray-300 dark:border-gray-500
        rounded-lg
        font-medium
        #{@last_assistant && 'hidden'}
      |
  %>

  <%= link_to t('app.settings.assistants.cancel'), root_path, class: "float-right inline-block ml-5 py-3" %>
</div>
