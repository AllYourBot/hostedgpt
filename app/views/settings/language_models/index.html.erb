<h1 class="font-bold text-4xl">
Language Models
</h1>

<p class="my-8">
  <%= link_to "Add New", new_settings_language_model_path, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium text-indigo-600 hover:text-indigo-900" %>
</p>

<table id="language-models" class="w-full table-auto border-b border-gray-300">
  <thead>
    <tr class="bg-gray-200">
      <th>Name</th>
      <th>Description</th>
      <th>API Service</th>
    </tr>
  </thead>

  <tbody>
    <% @language_models.each do |language_model| %>
      <%= turbo_frame_tag dom_id(language_model) do %>
        <tr class="<%= cycle('bg-gray-100', 'bg-white') %> cursor-pointer" data-href="<%= language_model_edit_show_path(language_model) %>">
          <td><%= language_model.name %></td>
          <td><%= language_model.description %></td>
          <td><%=  n_a_if_blank(language_model.api_service.try(:description)) %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<script>
  document.addEventListener("turbo:load", () => {
    document.querySelectorAll("table#language-models tr[data-href]").forEach(row => {
      row.addEventListener("click", () => {
        window.location.href = row.dataset.href;
      });
    });
  });
</script>
