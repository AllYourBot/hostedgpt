<div class="mx-auto md:w-2/3 w-full">
  <h1 class="text-3xl">
    <%= t('app.settings.language_models.editing_title', name: @language_model.api_name) %>
  </h1>

  <%= render "form", language_model: @language_model %>

  <%= button_to t('app.settings.language_models.delete'),
      settings_language_model_path(@language_model),
      method: :delete,
      data: { turbo_confirm: t('app.settings.language_models.confirm_delete') },
      form: { class: "inline-block" },
      class: %|
        ml-5 py-3 px-5
        bg-white dark:bg-gray-500
        border border-gray-300 dark:border-gray-500
        rounded-lg
        font-medium
      |
  %>

  <p class="float-right inline-block ml-5">
  <%= link_to t('app.settings.language_models.back'), settings_language_models_path, class: "float-right inline-block ml-5 py-3" %>
  </p>
</div>
