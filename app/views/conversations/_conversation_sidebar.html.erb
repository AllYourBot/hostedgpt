      <%= heroicon("dots-horizontal", variant: :solid, options: { class: 'ml-1 h-4 w-4 inline text-gray-400 invisible group-hover:visible hover:text-white cursor-pointer' }) %>
    <% end %>

    <% if defined?(selected) && selected %>
      <%= heroicon("archive", variant: :solid, options: { class: 'ml-1 h-4 w-4 inline text-gray-400 text-white cursor-pointer' }) %>
    <% else %>
      <%= heroicon("archive", variant: :solid, options: { class: 'ml-1 h-4 w-4 inline text-gray-400 invisible group-hover:visible hover:text-white cursor-pointer' }) %>
    <% end %>
  </div>
</div>
