<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Conversations</h1>
    <%= link_to "New conversation", new_conversation_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="conversations" class="min-w-full">
    <% @conversations.each do |conversation| %>
      <div id="<%= dom_id conversation %>">
        <p class="flex gap-2">
          <strong class="block font-medium mb-1">ID:</strong>
          <%= conversation.id %>
        </p>

        <p class="flex gap-2">
          <strong class="block font-medium mb-1">Assistant:</strong>
          <%= conversation.assistant.name %>
        </p>

        <p class="flex gap-2">
          <strong class="block font-medium mb-1">Title:</strong>
          <%= conversation.title %>
        </p>
      </div>
    <% end %>
  </div>
</div>
