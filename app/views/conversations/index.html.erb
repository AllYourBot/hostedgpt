<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Conversations</h1>
    <%= link_to "New conversation", new_conversation_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="conversations" class="min-w-full">
    <% @conversations.each do |conversation| %>
      <%= render partial: "conversations/conversation", locals: {conversation: conversation} %>
    <% end %>
  </div>
</div>
