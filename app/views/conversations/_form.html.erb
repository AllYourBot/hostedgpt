<turbo-frame id="conversation-<%= conversation.id %>">
  <%= form_with(model: conversation, data: { controller: "edit-conversation" }, class: "contents") do |form| %>
    <%= form.text_field :title,
      value: conversation.title,
      autofocus: true,
      class: %|
        block shadow rounded-md outline-none
        px-[7px] pt-[7px] pb-[7px]
        w-full
        text-sm
        disabled:text-gray-300
        dark:text-black
      |,
      data: {
        edit_conversation_target: "input",
        action: %|
          blur->edit-conversation#submitForm
          keydown.enter->edit-conversation#submitForm:prevent
        |
      }
    %>
  <% end %>
</turbo-frame>