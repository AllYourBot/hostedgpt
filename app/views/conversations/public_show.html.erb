<% content_for :heading do %>
  <%= @conversation.title.presence || "Shared Conversation" %>
<% end %>

<% content_for :main do %>
  <div class="w-full max-w-4xl mx-auto px-4 py-8">
    <div class="text-sm text-gray-500 dark:text-gray-400 mb-6 text-center">
      Shared by <%= @conversation.user.name %>
    </div>

    <div class="space-y-6 bg-white dark:bg-gray-900 rounded-lg p-6 border border-gray-200 dark:border-gray-700">
      <% @messages.each do |message| %>
        <div class="flex gap-4">
          <div class="flex-shrink-0">
            <div class="w-8 h-8 rounded-full bg-gray-200 dark:bg-gray-700 flex items-center justify-center">
              <% if message.user? %>
                <span class="text-sm font-medium text-gray-700 dark:text-gray-300">U</span>
              <% else %>
                <span class="text-sm font-medium text-gray-700 dark:text-gray-300">A</span>
              <% end %>
            </div>
          </div>
          <div class="flex-1">
            <div class="font-medium text-gray-900 dark:text-gray-100 mb-1">
              <%= message.user? ? @conversation.user.name : @assistant.name %>
            </div>
            <div class="prose prose-sm dark:prose-invert max-w-none">
              <%= simple_format(message.content_text) %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>