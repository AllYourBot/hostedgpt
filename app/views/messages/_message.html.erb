<div id="<%= dom_id message %>" class="my-5">
  <div class="flex">
    <div class="w-6 flex flex-col items-center">
      <div class="w-6 h-6 bg-white rounded-full mt-1"></div>
    </div>

    <!-- Right Column -->
    <div class="flex-1 min-w-0 ml-4 mr-8 text-gray-200">
      <div class="my-1 font-black">
        <%= message.user? ? 'You' : conversation.assistant.name %>
      </div>

      <div class="flex-1">
        <%= message.content_text %>
      </div>
    </div>
  </div>
</div>
