<%
  content_text = conversation_starter.join(" ") + "."
  title = conversation_starter[0]
  description = conversation_starter[1]
%>

<%= button_to assistant_messages_path(@assistant),
                method: :post,
                params: { message: { content_text: } },
                class: "#{conversation_starter_counter > 1 && "hidden"} md:block w-full border border-gray-200 dark:border-gray-600 rounded-xl px-4 py-3 text-left hover:bg-gray-50 dark:hover:bg-gray-700 group relative" do
          %>
            <div class="text-sm">
              <div class="flex flex-col flex-1 min-w-0">
                <span class="font-semibold truncate"><%= title %></span>
                <span class="truncate opacity-50"><%= description %></span>
              </div>

              <div class="p-1.5 bg-white dark:bg-gray-800 rounded-lg hidden group-hover:block absolute right-2 top-1/2 transform -translate-y-1/2">
                <%= icon "arrow-up", variant: :outline, size: 11, class: "text-gray-800 dark:text-white cursor-pointer stroke-3" %>
              </div>
            </div>
          <% end %>
