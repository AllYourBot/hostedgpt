<%= button_tag type: "button", 
               class: "#{"hidden" if conversation_starter_counter > 1} md:block border border-gray-200 dark:border-gray-600 rounded-xl px-4 py-3 text-left hover:bg-gray-50 dark:hover:bg-gray-700 group relative" do %>   
  <div class="text-sm">
    <div class="flex flex-col flex-1 min-w-0">
      <span class="font-semibold truncate"><%= conversation_starter[0] %></span>
      <span class="truncate opacity-50"><%= conversation_starter[1] %></span>
    </div>

    <div class="p-1.5 bg-white dark:bg-gray-800 rounded-lg hidden group-hover:block absolute right-2 top-1/2 transform -translate-y-1/2">
      <%= icon "arrow-up", variant: :outline, size: 11, class: "text-gray-800 dark:text-white cursor-pointer stroke-3" %>
    </div>
  </div>
<% end %>
